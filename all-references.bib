	author = {Fast, Jerome D. and Berg, Larry K. and Feng, Zhe and Mei, Fan and Newsom, Rob and Sakaguchi, Koichi and Xiao, Heng},
	year = {2019},
	keywords = {convective clouds, land-atmosphere coupling, LES model, soil moisture, Thesis},
	pages = {2629--2654},
	file = {Full Text PDF:/Users/sf20/Zotero/storage/ZG5UEVTA/Fast et al. - 2019 - The Impact of Variable Land-Atmosphere Coupling on.pdf:application/pdf;Snapshot:/Users/sf20/Zotero/storage/NTJGNKIQ/2019MS001727.html:text/html},
